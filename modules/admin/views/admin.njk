<!DOCTYPE html>
<html lang="{{ lang }}" dir="ltr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ backend_data.title[lang] }} | {{ config_website[lang].title }}</title>
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="/uikit/css/uikit.gradient.min.css">
        <link rel="stylesheet" href="/xwjs/css/frontend.min.css">
        <link rel="stylesheet" href="/modules/admin/css/admin.min.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/uikit/js/uikit.min.js"></script>
        <script src="/modules/admin/js/admin.min.js"></script>
    </head>
    <body>
        <nav class="xwjs-navbar xwjs-admin-navbar">
            <ul class="xwjs-navbar-nav">
                <a href="/admin" class="xwjs-navbar-brand"><img src="/xwjs/images/xwjs_logo_inv.png" alt="XWJS" class="xwjs-logo-img"></li></a>
                <li class="xwjs-parent" data-xwjs-dropdown="{pos:'right-center'}">
                    <a href=""><i class="xwjs-icon-button xwjs-icon-user"></i>&nbsp;&nbsp;{{ auth.username }}&nbsp;<i class="xwjs-icon-caret-right"></i></a>
                    <div class="xwjs-dropdown xwjs-dropdown-navbar xwjs-dropdown-small xwjs-admin-user-nav">
                        <ul class="xwjs-nav xwjs-nav-navbar">
                            <li><a href="/auth/logout">{{ i18n.__("admin_logout") }}</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
        <div class="xwjs-grid xwjs-grid-small data-xwjs-grid-match">
            <div class="xwjs-width-xlarge-1-6 xwjs-width-large-2-10 xwjs-width-medium-3-10 xwjs-hidden-small xwjs-admin-nav">
                <ul class="xwjs-nav xwjs-nav-side">
                    <li class="xwjs-admin-nav-home"><a href="/admin"><i class="xwjs-icon-home xwjs-nav-icon"></i>{{ i18n.__("admin_home") }}</a></li>{% for item in backend_json %}
                    <li class="xwjs-admin-nav-{{ item.id }}"><a href="/admin/{{ item.id }}"><i class="xwjs-icon-{{ item.icon }} xwjs-nav-icon"></i>{{ item.title[lang] }}</a></li>{% endfor %}
                </ul>
            </div>
            <div class="xwjs-width-xlarge-5-6 xwjs-width-large-8-10 xwjs-width-medium-7-10 xwjs-width-small-1-1 xwjs-admin-content">{{ backend_html }}</div>
        </div>
        <script>$('.xwjs-admin-nav-{{ backend_data.id }}').addClass('xwjs-active');</script>
    </body>
</html>