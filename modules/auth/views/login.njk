<!DOCTYPE html>
<html lang="{{ lang }}" class="xwjs-height-1-1">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ i18n.__("login") }} | {{ config_website[lang].title }}</title>
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="/uikit/css/uikit.gradient.min.css">
        <link rel="stylesheet" href="/xwjs/css/frontend.min.css">
        <link rel="stylesheet" href="/modules/auth/css/login.min.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/uikit/js/uikit.min.js"></script>
        <script src="/modules/auth/js/login.min.js"></script>
        <script src="/api/auth/lang"></script>
    </head>
    <body class="xwjs-height-1-1">
        <div class="xwjs-vertical-align xwjs-text-center xwjs-height-1-1">
            <div class="xwjs-vertical-align-middle xwjs-margin-top" style="width: 250px;padding-bottom:20px">
                <a href="/"><img class="xwjs-margin-bottom" width="140" height="59" src="/xwjs/images/logo.png" alt=""></a>
                <form class="xwjs-panel xwjs-panel-box xwjs-form" id="login_form">
                    <div class="xwjs-form-row">
                        <input class="xwjs-width-1-1 xwjs-form-large login-form-item login-form-input" type="text" placeholder="{{ i18n.__('username') }}" id="auth_username" data-validation="custom" data-validation-regexp="^[a-zA-Z0-9_]{3,20}$" data-validation-error-msg="{{ i18n.__('invalid_username') }}">
                    </div>
                    <div class="xwjs-form-row">
                        <input class="xwjs-width-1-1 xwjs-form-large login-form-item login-form-input" type="password" placeholder="{{ i18n.__('password') }}" id="auth_password" data-validation="length" data-validation-length="8-64" data-validation-error-msg="{{ i18n.__('invalid_password') }}">
                    </div>
                    <div class="xwjs-form-row login-form-captcha-row">
                        <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" alt="" class="xwjs-login-captcha-img login-form-item" data-xwjs-tooltip="{pos:'top',delay:'1000'}" title="{{ i18n.__("captcha_refresh") }}">
                    </div>
                    <div class="xwjs-form-row">
                        <input class="xwjs-width-1-1 xwjs-form-large xwjs-login-captcha login-form-item login-form-input" type="text" placeholder="{{ i18n.__('captcha') }}" id="auth_captcha" data-validation="custom" data-validation-regexp="^[a-zA-Z]{5}$" data-validation-error-msg="{{ i18n.__('invalid_captcha') }}">
                    </div>
                    <div class="xwjs-form-row">
                        <button class="xwjs-width-1-1 xwjs-button xwjs-button-primary xwjs-button-large login-form-item" id="btn_login"><span class="login-form-loading xwjs-hidden"><img src="/xwjs/images/loading.gif" width="16" height="16" alt="">&nbsp;</span>{{ i18n.__("login") }}</button>
                    </div>
                    <div class="xwjs-form-row xwjs-text-small">
                        <a class="xwjs-float-left xwjs-link xwjs-link-muted" href="/auth/register">{{ i18n.__("register") }}</a>
                        <a class="xwjs-float-right xwjs-link xwjs-link-muted" href="/auth/password">{{ i18n.__("forgot_password") }}</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>